---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="bg-gray-50 min-h-screen">
    <nav class="bg-white shadow-sm">
      <div class="container mx-auto px-4">
        <div class="flex justify-between items-center h-16">
          <a href="/LiquidInsightsAITest/" class="text-xl font-bold">Liquid Insights</a>
          <div class="hidden md:flex space-x-8">
            <a href="/LiquidInsightsAITest/ai-tools" class="text-gray-700 hover:text-gray-900">AI Tools</a>
            <a href="/LiquidInsightsAITest/conferences" class="text-gray-700 hover:text-gray-900">Conferences</a>
            <a href="/LiquidInsightsAITest/insights" class="text-gray-700 hover:text-gray-900">Insights</a>
            <a href="/LiquidInsightsAITest/blog" class="text-gray-700 hover:text-gray-900">Blog</a>
          </div>
        </div>
      </div>
    </nav>

    <slot />

    <footer class="bg-white mt-12 py-8">
      <div class="container mx-auto px-4 text-center text-gray-600">
        <p>&copy; {new Date().getFullYear()} Liquid Insights. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>
